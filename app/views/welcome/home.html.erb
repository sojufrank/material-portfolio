<!--intro/content-->
<div class="demo-container mdl-grid">
  <div class="mdl-cell mdl-cell--3-col-desktop mdl-cell--1-col-tablet mdl-cell--hide-phone"></div>
  <div class="demo-content mdl-color--grey-100 mdl-shadow--4dp content mdl-cell mdl-cell--6-col mdl-cell--6-col-tablet">
    <h1 class="my-info mdl-color--primary mdl-shadow--4dp" align="center"> {{myInfo.heading}} </h1> 
    <p align="center" class="">{{myInfo.body}}</p>
    <div class="frank-img"><img src="/frank.jpg" id="frank-img"></div>
      <div align="center">
        <span><a href="{{myInfo.github}}"><i class="hover fa fa-github-square fa-5x"></i></a></span>
        <span><a href="{{myInfo.linkedin}}"><i class="hover fa fa-linkedin-square fa-5x mdl-color-text--blue"></i></a></span>
        <span><a href="{{myInfo.wordpress}}"><i class="hover fa fa-wordpress fa-5x"></i></a></span>
      </div>
    </div>
</div>

<!--Crimemap-->
<div class="demo-container mdl-grid">
  <div class="mdl-cell mdl-cell--3-col-desktop mdl-cell--1-col-tablet mdl-cell--hide-phone"></div>
  <div class="demo-content mdl-color--grey-100 mdl-shadow--4dp  mdl-cell mdl-cell--6-col mdl-cell--6-col-tablet">
    <h2 class="crime-title mdl-color--accent mdl-shadow--4dp" align="center">{{crimeMap.heading}}</h2>
    <a href="{{crimeMap.link}}"><img id="crime-img" src="https://s3-us-west-2.amazonaws.com/sojuheroku/soju-crime.jpg"></a>
    <p align="center">{{crimeMap.body}}</p> 
    <a href="{{crimeMap.github}}"><i class="hover fa fa-github-square fa-3x"></i></a>
  </div>
</div>

<!-- Minor projects -->
